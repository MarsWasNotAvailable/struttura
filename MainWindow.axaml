<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="640"
        x:Class="struttura.MainWindow"
        Title="struttura">
    <DockPanel >
        <TabControl DockPanel.Dock="Top">
            <TabItem Header="Tab 1"/>
            <TabItem Header="Tab 2"/>
            <TabItem Header="Tab 3"/>
            <TabItem Header="Tab 4"/>
        </TabControl>

        <TextBlock DockPanel.Dock="Top" Text="Input" 
           HorizontalAlignment="Center" Margin="0,10"/>
        <TextBlock DockPanel.Dock="Top" Text="Result"
           HorizontalAlignment="Center" Margin="0,10"/>

        <UniformGrid DockPanel.Dock="Bottom" Columns="4" Rows="4">
            <Button Content="1"/>
            <Button Content="2"/>
            <Button Content="3"/>
            <Button Content="4"/>
        </UniformGrid>
    </DockPanel>
</Window>
